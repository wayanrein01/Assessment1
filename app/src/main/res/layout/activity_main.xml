            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJudul">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/angka1"
                android:layout_width="match_parent"
